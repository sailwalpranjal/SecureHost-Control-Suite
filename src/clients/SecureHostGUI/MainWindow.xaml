<Window x:Class="SecureHostGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="SecureHost Control Suite" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Mode="PrimaryDark" Padding="16" Grid.Row="0">
            <DockPanel>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Shield" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="SecureHost Control Suite" VerticalAlignment="Center" FontSize="22" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                    <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <materialDesign:PackIcon Kind="Circle" Width="16" Height="16" VerticalAlignment="Center">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Foreground" Value="Red"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Foreground" Value="LightGreen"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Dashboard Tab -->
            <TabItem Header="Dashboard">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="System Status" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Service Status Card -->
                            <materialDesign:Card Grid.Column="0" Margin="10" Padding="20">
                                <StackPanel>
                                    <materialDesign:PackIcon Kind="Server" Width="48" Height="48" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Service Status" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                    <TextBlock Text="{Binding ServiceStatus}" HorizontalAlignment="Center" FontSize="14"/>
                                    <TextBlock Text="{Binding Uptime}" HorizontalAlignment="Center" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Rules Count Card -->
                            <materialDesign:Card Grid.Column="1" Margin="10" Padding="20">
                                <StackPanel>
                                    <materialDesign:PackIcon Kind="Shield" Width="48" Height="48" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Policy Rules" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                    <TextBlock Text="{Binding TotalRules}" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold"/>
                                    <TextBlock HorizontalAlignment="Center" FontSize="12" Foreground="Gray">
                                        <Run Text="{Binding ActiveRules}"/>
                                        <Run Text=" active"/>
                                    </TextBlock>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Connections Card -->
                            <materialDesign:Card Grid.Column="2" Margin="10" Padding="20">
                                <StackPanel>
                                    <materialDesign:PackIcon Kind="NetworkOutline" Width="48" Height="48" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Active Connections" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                    <TextBlock Text="{Binding ActiveConnections}" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold"/>
                                    <TextBlock Text="monitored" HorizontalAlignment="Center" FontSize="12" Foreground="Gray"/>
                                </StackPanel>
                            </materialDesign:Card>
                        </Grid>

                        <Button Content="Refresh Status" Command="{Binding RefreshStatusCommand}"
                                Margin="0,20,0,0" HorizontalAlignment="Center" Width="200"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Policy Rules Tab -->
            <TabItem Header="Policy Rules">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Policy Rules" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" VerticalAlignment="Center"/>
                        <Button Content="Add Rule" Command="{Binding AddRuleCommand}" Margin="20,0,0,0"/>
                        <Button Content="Refresh" Command="{Binding RefreshRulesCommand}" Margin="10,0,0,0"/>
                        <Button Content="⚠️ RESET ALL DEVICES" Command="{Binding ResetAllDevicesCommand}"
                                Margin="30,0,0,0" Padding="15,5"
                                Background="#FFD32F2F" Foreground="White" FontWeight="Bold"
                                ToolTip="Emergency reset: Re-enable all devices regardless of rules"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding PolicyRules}" AutoGenerateColumns="False"
                              IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100"/>
                            <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="100"/>
                            <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="80"/>
                            <DataGridTemplateColumn Header="Actions" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Toggle" Margin="5,0" Padding="10,5"
                                                    Command="{Binding DataContext.ToggleRuleCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip="Enable/Disable this rule (applies instantly!)"
                                                    Background="#FF4CAF50" Foreground="White"/>
                                            <Button Content="Delete" Margin="5,0" Padding="10,5"
                                                    Command="{Binding DataContext.DeleteRuleCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Network Tab -->
            <TabItem Header="Network">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Active Network Connections" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" VerticalAlignment="Center"/>
                        <Button Content="Refresh" Command="{Binding RefreshConnectionsCommand}" Margin="20,0,0,0"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" ItemsSource="{Binding NetworkConnections}" AutoGenerateColumns="False"
                              IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="80"/>
                            <DataGridTextColumn Header="Local Address" Binding="{Binding LocalAddress}" Width="150"/>
                            <DataGridTextColumn Header="Local Port" Binding="{Binding LocalPort}" Width="100"/>
                            <DataGridTextColumn Header="Remote Address" Binding="{Binding RemoteAddress}" Width="150"/>
                            <DataGridTextColumn Header="Remote Port" Binding="{Binding RemotePort}" Width="100"/>
                            <DataGridTextColumn Header="State" Binding="{Binding State}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Audit Tab -->
            <TabItem Header="Audit Logs">
                <Grid Margin="20">
                    <StackPanel>
                        <TextBlock Text="Audit Log Export" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Start Date:" VerticalAlignment="Center" Margin="0,10"/>
                            <DatePicker Grid.Row="0" Grid.Column="1" Margin="10" SelectedDate="{Binding AuditStartDate}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="End Date:" VerticalAlignment="Center" Margin="0,10"/>
                            <DatePicker Grid.Row="1" Grid.Column="1" Margin="10" SelectedDate="{Binding AuditEndDate}"/>

                            <Button Grid.Row="2" Grid.Column="1" Content="Export Audit Logs" Command="{Binding ExportAuditCommand}"
                                    Margin="10" HorizontalAlignment="Left" Width="200"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusBarText}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
